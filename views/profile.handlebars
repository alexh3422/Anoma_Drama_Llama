<div class="column">
  <div id="userInfo" userId="{{user.id}}">
    <h2>{{user.username}}</h2>
    {{#if user.currentMood}}
    <p>Your current mood is: {{user.currentMood}}</p>
    {{else}}
    <p>You haven't set a current mood yet</p>
    {{/if}}
  </div>

  {{> mood-wheel}}

  <div class="allPosts">
    <h2>Your Drama</h2>
    {{#each userPosts}}
    <div class="post-box">
      <p id="postUsername">Your drama:</p>
      <p id="title">"{{title}}"</p>
      <p id="text">{{text}}</p>
      <p>You felt {{moodText}} on {{dateFormat createdAt}}</p>
    </div>
    {{/each}}
  </div>
</div>

<script src="/js/currentMood.js"></script>