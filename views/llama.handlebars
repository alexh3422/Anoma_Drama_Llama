<div>
  <div class="row">
    <div class="column">

      <main>

        <div
          id="userLlamaPage"
          userId="{{user.id}}"
          llamaId="{{user.llama.id}}"
        >
          <p id="userLlamaName">{{user.llama.name}}</p>
          <div id="llamaCard">
            <img src="{{user.llama.llama_image}}" />
            <img src="{{user.llama.llama_hat_image}}" />
          </div>

          {{! TODO: Create happiness meter to represent integer value }}
          <div id="userLlamaHappiness">
            {{user.llama.happiness}}
          </div>

          <button id="toEditBttn">Edit Llama</button>

        </div>

        <div id="llamaEdit">
          <h2>Customize Your Llama</h2>
          <form id="llamaSelect">
            <label for="llamaName">Name your llama:</label>
            <input type="text" id="llamaName" />
            <label for="llamaColor">Choose a color:</label>
            <select name="colors" class="colorSelect">
              <option value="grey">Grey</option>
              <option value="brown">Brown</option>
              <option value="white">White</option>
            </select>
            <br />
            <label for="llamaHat">Choose a hat:</label>
            <select name="hats" class="hatSelect">
              <option value="none">None</option>
              <option value="cowboy">Cowboy Hat</option>
              <option value="crown">Crown</option>
              <option value="wizard">Wizard Hat</option>
            </select>
            <div id="llamaCard">
              <img id="llamaImage" src="images/pixel-llamas/llama01.png" />
              <img id="hatImage" src="" />
            </div>
            <input type="submit" id="submit" />
          </form>
        </div>

      </main>

    </div>
  </div>
</div>
<script src="js/llama.js"></script>